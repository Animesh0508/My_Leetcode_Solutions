#include <algorithm> // Required for std::min
#include <climits>   // Required for INT_MAX

class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
        int i =0;int j =0;
        int len = nums.size();
        int min = 0; int sum=0;
        int res = INT_MAX;
        //vector<int>temp;
        for (int j = 0; j < nums.size(); j++) {
            
            sum += nums[j];

            while (sum >= target) {
                res = std::min(res, j - i + 1);
                sum -= nums[i];
                i++;
            }
        }
        return res == INT_MAX ? 0 : res;
    }
};
